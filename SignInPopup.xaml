<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iStore.SignInPopup"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             Title="SignInPopup" IsCloseOnBackgroundClick="True" VerticalOptions="Center" HorizontalOptions="Center" Background="Transparent">
    <VerticalStackLayout MaximumWidthRequest="300">
        <Label Text="Login"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
        <Entry Placeholder="User Name"
               Text="{Binding UserName}"/>
        <Entry Placeholder="Password"
               Text="{Binding Password}"
               IsPassword="True"/>
        <Button Text="Login"
                FontAttributes="Bold"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="Button_Clicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</mauiPopup:BasePopupPage>
