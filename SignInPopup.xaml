<?xml version="1.0" encoding="utf-8" ?>
<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iStore.SignInPopup"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             Title="SignInPopup" IsCloseOnBackgroundClick="True" VerticalOptions="Center" HorizontalOptions="Center" Background="Transparent">
    <VerticalStackLayout MaximumWidthRequest="300">
        <Label Text="Login"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
        <Entry Placeholder="Username"
               PlaceholderColor="{StaticResource MidGray}"
               Text="{Binding UserName}"/>
        <Entry Placeholder="Password"
               PlaceholderColor="{StaticResource MidGray}"
               Text="{Binding Password}"
               IsPassword="True"/>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Login"
                Clicked="LoginButton_Clicked"/>
            <Button Text="Close"
                Background="{StaticResource MidGray}"
                Clicked="CloseButton_Clicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</mauiPopup:BasePopupPage>
